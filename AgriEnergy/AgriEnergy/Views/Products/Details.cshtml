@model AgriEnergy.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <h2 class="mb-4 text-success"><i class="bi bi-box-seam"></i> Product Details</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Farmer Name</dt>
                <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.FarmerName)</dd>

                <dt class="col-sm-3 text-muted">Product Name</dt>
                <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.ProductName)</dd>

                <dt class="col-sm-3 text-muted">Category</dt>
                <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.category)</dd>

                <dt class="col-sm-3 text-muted">Date Added</dt>
                <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.DateTime)</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning me-2">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to List
        </a>
    </div>
</div>