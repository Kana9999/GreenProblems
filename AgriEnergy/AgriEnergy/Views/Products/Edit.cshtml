@model AgriEnergy.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Product</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="FarmerName" class="form-label fw-semibold"></label>
                    <input asp-for="FarmerName" class="form-control" />
                    <span asp-validation-for="FarmerName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductName" class="form-label fw-semibold"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="category" class="form-label fw-semibold"></label>
                    <input asp-for="category" class="form-control" />
                    <span asp-validation-for="category" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DateTime" class="form-label fw-semibold"></label>
                    <input asp-for="DateTime" class="form-control" type="datetime-local" />
                    <span asp-validation-for="DateTime" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}