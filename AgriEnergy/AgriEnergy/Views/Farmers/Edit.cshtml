@model AgriEnergy.Models.Farmer

@{
    ViewData["Title"] = "Edit Farmer";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Edit Farmer Details</h2>
    <div class="card shadow-lg">
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="FarmerName" class="form-label fw-bold"></label>
                    <input asp-for="FarmerName" class="form-control" />
                    <span asp-validation-for="FarmerName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="FarmerLastName" class="form-label fw-bold"></label>
                    <input asp-for="FarmerLastName" class="form-control" />
                    <span asp-validation-for="FarmerLastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="City" class="form-label fw-bold"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="EmailAddress" class="form-label fw-bold"></label>
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}